<h1>Plenty of stuff for you to read.</h1>

<div>
<%= link_to 'New article', new_article_path %>
</div><br><br>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article.uuid) %></td>
      <td><%= link_to 'Edit', edit_article_path(article.uuid) %></td>
      <td><%= link_to 'Destroy', article_path(article.uuid),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>